@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="title">Order title</label>
  <input id="title" name="title" type="text"><br>
  <label for="orderDescription">Order Description</label>
  <input id="orderDescription" name="orderDescription" type="text"><br>
  <label for="price">Price of order</label>
  <input id="price" name="price" type="number"><br>
  <label for="date">Date of order</label>
  <input id="date" name="date" type="date"><br>
  <button type='submit'>Add item</button>
</form>